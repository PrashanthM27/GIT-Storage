<aura:component controller="FCST_UpdateContractExtension" implements="force:appHostable,flexipage:availableForAllPageTypes,force:hasRecordId,force:lightningQuickAction" access="global">
    <aura:attribute name="recordId" type="Id" />

    <aura:attribute name="Message" type="String" />
    <aura:attribute name="isError" type="Boolean" default="false" />
    <aura:attribute name="showSpinner" type="Boolean" default="false" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:if isTrue="{!v.showSpinner}">
        <lightning:spinner />
    </aura:if>
    <aura:if isTrue="{!v.isError}">
        <div style="text-align:center;padding:10px">{!v.Message}</div>
    </aura:if>    
</aura:component>