<apex:page controller="AddRow">
    <apex:form >
        <apex:pageBlock >
             <apex:variable value="{!0}" var="RowNum"/>
            <apex:pageBlockSection columns="1">
                <apex:pageBlockTable value="{!acListData}" var="acc" id="mem">
                    <apex:column headerValue="Account Name">
                        <apex:inputField value="{!acc.Name}"/>
                    </apex:column>
                    <apex:column headerValue="Account Phone">
                        <apex:inputField value="{!acc.Phone}"/>
                    </apex:column>
                    <apex:column >
                    <apex:commandLink action="{!AddRowMethod}" value="AddRow" reRender="mem" /> &nbsp;&nbsp; || &nbsp;&nbsp;
                    <apex:commandLink action="{!removeRow}" value="Remove Row" reRender="mem" >            
                        <apex:param value="{!RowNum}" assignTo="{!num}"/>
                    </apex:commandLink>
                        <apex:variable value="{!RowNum + 1}" var="RowNum"/>
                    </apex:column>
                    
                </apex:pageBlockTable>        
                
            </apex:pageBlockSection>
            
        </apex:pageBlock>
    </apex:form>
</apex:page>